<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Public Assignments - Assignment Tracker</title>
</head>
<body>
    <div class="wrapper">
        <header>
            <h1>Assignment Tracker</h1>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/register">Register</a></li>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/public-assignments">Public Assignments</a></li>
                </ul>
            </nav>
        </header>

        <!-- Main content section -->
        <div class="content">
            <div class="container">
                <h2>All Assignments</h2>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Due Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% assignments.forEach(assignment => { %>
                            <tr>
                                <td><%= assignment.title %></td>
                                <td><%= assignment.description %></td>
                                <td><%= assignment.dueDate.toDateString() %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Footer section -->
        <footer>
            <p>&copy; 2024 Assignment Tracker. All rights reserved.</p>
        </footer>
    </div>
</body>
</html>
