<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Assignments - Assignment Tracker</title>
</head>
<body>
    <div class="wrapper">
        <header>
            <h1>Assignment Tracker</h1>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/register">Register</a></li>
                    <li><a href="/login">Login</a></li>
                </ul>
            </nav>
        </header>

        <!-- Main content section -->
        <div class="content">
            <div class="container">
                <h2>Your Assignments</h2>
                
                <!-- Add Assignment Button -->
                <div style="text-align: right; margin-bottom: 20px;">
                    <a href="/add-assignment" class="btn btn-primary">Add Assignment</a>
                </div>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Due Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% assignments.forEach(assignment => { %>
                            <tr>
                                <td><%= assignment.title %></td>
                                <td><%= assignment.description %></td>
                                <td><%= assignment.dueDate.toDateString() %></td>
                                <td>
                                    <a href="/edit-assignment/<%= assignment._id %>" class="btn btn-edit">Edit</a>
                                    <!-- Delete Button -->
                                    <form action="/delete-assignment/<%= assignment._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this assignment?');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Footer section -->
        <footer>
            <p>&copy; 2024 Assignment Tracker. All rights reserved.</p>
        </footer>
    </div>
</body>
</html>

